<Window x:Class="TypeBrowserWP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="TypeBrowser" Height="700" Width="1100" 
        Background="#FF0D0D0D" 
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Анимации -->
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                            From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="ScaleSearch">
            <DoubleAnimation Storyboard.TargetProperty="Height"
                            From="36" To="32" Duration="0:0:0.15"/>
        </Storyboard>

        <!-- Стиль для прямоугольных вкладок Firefox-style -->
        <Style x:Key="FirefoxTabStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Background="#FF2D2D2D" 
                                   BorderBrush="#FF404040" BorderThickness="1,1,1,0"
                                   Margin="0,0,-1,0" CornerRadius="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter x:Name="ContentSite" Grid.Column="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        ContentSource="Header"
                                        Margin="12,6,0,6"/>

                                    <Button x:Name="CloseTabBtn" Grid.Column="1" Content="×" 
                                           Width="16" Height="16" Background="Transparent"
                                           Foreground="#FF999999" BorderThickness="0" FontSize="9" FontWeight="Bold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           Click="CloseTabButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Opacity" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsSelected}" Value="True">
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF1A1A1A"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF555555"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF353535"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Кастомный заголовок -->
        <Border x:Name="TitleBar" Height="32" VerticalAlignment="Top" Background="#FF1A1A1A"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Лого и название -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="🌐" FontSize="14" Margin="15,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="AppTitle" Text="TypeBrowser" Foreground="#FFE0E0E0" 
                              VerticalAlignment="Center" FontSize="11" FontFamily="Segoe UI" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Кнопки управления окном -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <Button x:Name="MinimizeBtn" Content="─" Width="32" Height="32" Background="Transparent" 
                            Foreground="#FFB0B0B0" BorderThickness="0" FontSize="10" FontWeight="Bold"
                            Click="MinimizeButton_Click"
                            MouseEnter="ControlButton_MouseEnter"
                            MouseLeave="ControlButton_MouseLeave"/>

                    <Button x:Name="MaximizeBtn" Content="🗖" Width="32" Height="32" Background="Transparent" 
                            Foreground="#FFB0B0B0" BorderThickness="0" FontSize="10"
                            Click="MaximizeButton_Click"
                            MouseEnter="ControlButton_MouseEnter"
                            MouseLeave="ControlButton_MouseLeave"/>

                    <Button x:Name="CloseBtn" Content="✕" Width="32" Height="32" Background="Transparent" 
                            Foreground="#FFB0B0B0" BorderThickness="0" FontSize="11" FontWeight="SemiBold"
                            Click="CloseButton_Click"
                            MouseEnter="CloseButton_MouseEnter"
                            MouseLeave="CloseButton_MouseLeave"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель навигации -->
        <Border x:Name="NavBar" Background="#FF252525" Height="48" VerticalAlignment="Top" Margin="0,32,0,0">
            <Grid Margin="12,6,12,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопки навигации -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <Button x:Name="BackBtn" Content="←" Width="28" Height="28" Background="#FF3A3A3A" 
                            Foreground="#FFCCCCCC" BorderThickness="0" FontSize="10" FontWeight="Bold"
                            Click="BackButton_Click"
                            MouseEnter="NavButton_MouseEnter"
                            MouseLeave="NavButton_MouseLeave">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="ForwardBtn" Content="→" Width="28" Height="28" Background="#FF3A3A3A" 
                            Foreground="#FFCCCCCC" BorderThickness="0" FontSize="10" FontWeight="Bold"
                            Click="ForwardButton_Click"
                            MouseEnter="NavButton_MouseEnter"
                            MouseLeave="NavButton_MouseLeave"
                            Margin="5,0,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="RefreshBtn" Content="↻" Width="28" Height="28" Background="#FF3A3A3A" 
                            Foreground="#FFCCCCCC" BorderThickness="0" FontSize="10"
                            Click="RefreshButton_Click"
                            MouseEnter="NavButton_MouseEnter"
                            MouseLeave="NavButton_MouseLeave"
                            Margin="5,0,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <!-- Стильный поиск -->
                <Border x:Name="SearchBox" Grid.Column="1" Background="#FF2D2D2D" Height="36" 
                        CornerRadius="18" Margin="10,0,10,0"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TextSearch" Grid.Column="0" 
                                Background="Transparent" Foreground="#FFE8E8E8"
                                BorderThickness="0" Padding="15,0,0,0"
                                VerticalContentAlignment="Center" FontSize="12"
                                TextWrapping="NoWrap" KeyDown="TextSearch_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Opacity" Value="0.9"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button x:Name="SearchButton" Grid.Column="1" 
                                Content="🔍" Background="Transparent" 
                                Foreground="#FFAAAAAA" BorderThickness="0"
                                Width="36" Height="36" FontSize="11" 
                                Click="SearchButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Opacity" Value="0.7"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="Foreground" Value="#FFCCCCCC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Кнопки новой вкладки и настроек -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="NewTabBtn" Content="+" 
                            Width="28" Height="28" Background="#FF3A3A3A" 
                            Foreground="#FFCCCCCC" BorderThickness="0" FontSize="14" FontWeight="Bold"
                            Click="NewTabButton_Click"
                            MouseEnter="NavButton_MouseEnter"
                            MouseLeave="NavButton_MouseLeave"
                            Margin="0,0,5,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="SettingsBtn" Content="⚙" 
                            Width="28" Height="28" Background="#FF3A3A3A" 
                            Foreground="#FFCCCCCC" BorderThickness="0" FontSize="12"
                            Click="SettingsButton_Click"
                            MouseEnter="NavButton_MouseEnter"
                            MouseLeave="NavButton_MouseLeave">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель вкладок Firefox-style -->
        <Border Background="#FF252525" Height="38" VerticalAlignment="Top" Margin="0,80,0,0">
            <Grid>
                <TabControl x:Name="MainTabControl" Background="Transparent" BorderThickness="0" 
                           TabStripPlacement="Top" SelectionChanged="MainTabControl_SelectionChanged">
                    <TabControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </TabControl.ItemsPanel>

                    <TabControl.ItemContainerStyle>
                        <Style TargetType="TabItem" BasedOn="{StaticResource FirefoxTabStyle}"/>
                    </TabControl.ItemContainerStyle>
                </TabControl>
            </Grid>
        </Border>

        <!-- Контентная область для активной вкладки -->
        <Border x:Name="ContentArea" Margin="0,118,0,0" Background="#FF1A1A1A">
            <ContentControl x:Name="TabContentControl"/>
        </Border>

        <!-- Окно настроек -->
        <Border x:Name="SettingsPanel" Background="#FF2D2D2D" BorderBrush="#FF555555" 
                BorderThickness="1" CornerRadius="8" Padding="15"
                Width="250" Height="180" VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="0,100,10,0" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Настройки" Foreground="#FFE0E0E0" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Поисковая система:" Foreground="#FFCCCCCC" FontSize="11" Margin="0,5,0,2"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="GoogleRadio" Content="Google" Foreground="#FFCCCCCC" 
                                FontSize="11" Checked="Google_Checked" IsChecked="True"/>
                    <RadioButton x:Name="DuckRadio" Content="DuckDuckGo" Foreground="#FFCCCCCC" 
                                FontSize="11" Checked="Duck_Checked" Margin="15,0,0,0"/>
                </StackPanel>

                <TextBlock Text="Тема:" Foreground="#FFCCCCCC" FontSize="11" Margin="0,5,0,2"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton x:Name="DarkThemeRadio" Content="Тёмная" Foreground="#FFCCCCCC" 
                                FontSize="11" Checked="DarkTheme_Checked" IsChecked="True"/>
                    <RadioButton x:Name="LightThemeRadio" Content="Светлая" Foreground="#FFCCCCCC" 
                                FontSize="11" Checked="LightTheme_Checked" Margin="15,0,0,0"/>
                </StackPanel>

                <Button Content="Закрыть" Background="#FF555555" Foreground="White"
                        BorderThickness="0" Height="24" FontSize="11"
                        Click="CloseSettings_Click"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>